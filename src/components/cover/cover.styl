#cover
    @apply flex flex-row w-full my-12
    padding 16px 36px

    &.-preload
        & > .cover
            @apply inline bg-gray-300 rounded-md
            padding-right 37%
            padding-bottom 1%
            box-shadow 0 2px 8px rgba(72,72,72,0.05), 
                0 8px 25px rgba(72,72,72,0.1), 
                0 16px 48px rgba(72,72,72,0.1)

            & > .page
                opacity 0

        & > .detail
            & > .code,
            & > .title,
            & > .sub-title,
            & > .info > .content
            & > .tag-container > .tag
                @apply inline-block px-8 rounded-sm bg-gray-200

            & > .code
                width 100px
                height 24px

            & > .title
                height 48px

            & > .sub-title
                height 48px

            & > .info > .content
                @apply px-0 mb-0
                height 27px

            & > .tag-container > .tag
                @apply mb-0 px-12 py-0
                height 29px


    & > .cover
        & > .page
            @apply flex rounded-md
            flex 5
            box-shadow 0 2px 8px rgba(0,0,0,.05),
                0 8px 25px rgba(0,0,0,.1),
                0 16px 48px rgba(0,0,0,.1)

    & > .detail
        @apply flex flex-col pl-8
        flex 6

        & > .title
            @apply text-gray-800 text-2xl font-semibold mb-2

        & > .sub-title,
        & > .code
            @apply text-gray-500 font-medium mb-2

        & > .info
            @apply flex flex-row w-full mb-4
                
            & > .content
                @apply text-gray-600 text-lg font-medium mr-6

    @media screen and (max-width 767.9px)
        &
            @apply flex-col

        &.-preload
            & > .cover
                @apply mx-auto mb-12
                width 350px
                max-width 100%

                & > .page
                    @apply mb-0
                    padding-top 25%

                    & > .paper
                        min-height 370px

        & > .cover
            @apply contents

            & > .page
                @apply inline-block mx-auto mb-12

            &,
            & > .page,
            & > .page > .paper
                max-height 95vh

        & > .detail
            @apply pl-0