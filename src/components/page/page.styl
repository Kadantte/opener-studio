.page
    @apply inline-block bg-gray-200
    overflow hidden

    & > .paper
        @apply block w-full
        object-fit contain
        border-radius inherit

        &.-lazy
            min-height 500px
            padding-top 145%

        &.-preload
            @apply opacity-0

    @media screen and (max-width 567.9px)
        &
            & > .paper
                &.-preload
                    padding-top 145%