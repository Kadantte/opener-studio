#gallery
    @apply flex flex-row w-full

    & > .masonry
        @apply flex flex-col flex-1 px-2
        content-visibility auto
        contain-intrinsic-size 340px

        & > .book
            @apply mb-3

            & > .page
                @apply w-full
                border-radius 16px
                box-shadow unset

    @media screen and (min-width 960px)
        &
            padding 0 20px